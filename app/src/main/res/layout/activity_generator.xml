<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generator">


    <EditText
        android:id="@+id/textVal"
        android:layout_width="325dp"
        android:layout_height="41dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Enter Text Value"
        android:inputType="text|textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/qrGenBtn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/holo_blue_light"
        android:text="Generate"
        android:textSize="14sp"
        app:layout_constraintCircleRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVal" />

    <Button
        android:id="@+id/qrScanBtn"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="121dp"
        android:background="@android:color/holo_blue_light"
        android:text="Scan"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="242dp"
        android:layout_height="234dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrGenBtn"
        android:src="@color/cardview_shadow_end_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>